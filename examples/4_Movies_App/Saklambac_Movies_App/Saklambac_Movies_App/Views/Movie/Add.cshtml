@model Saklambac_Movies_App.Models.Movie
@{
    ViewBag.Title = "Add";
}

<div class="container col-md-5 text-center">
    <form method="post" action="/Movie/Add/">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" id="Name" name="Name" required/>
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" id="Description" name="Description" required/>
        </div>
        <div class="form-group">
            <label>Category</label>
            <input type="text" class="form-control" id="Category" name="Category" required/>
        </div>
        <div class="form-group">
            <label>Imdb Score</label>
            <input type="text" class="form-control" id="ImdbScore" name="ImdbScore" required/>
        </div>
        <div class="form-group">
            <label>Photo</label>
            <input type="text" class="form-control" id="Photo" name="Photo" required/>
        </div>
        <div class="form-group">
            <label>DirectorId</label>
            <select class="form-control" id="DirectorId" name="DirectorId">
            </select>
        </div>
        <button type="submit" class="btn btn-outline-info">Add New Movie</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            url: '/Director/GetDirectorsList',
            type: 'POST',
            dataType: 'json',
            success: function (data) {
                console.log(data);
                $.each(data, function (i, item) {
                    $("#DirectorId").append(
                        "<option>" + item.Name +"</option>"
                    );
                });
            }
        });
    });
</script>