@model Saklambac_Movies_App.Models.Movie
@{
    ViewBag.Title = "Detail";
}

<div class="container col-md-9 text-center">
    <div class="row">
        <div class="container col-md-4">
            <img width="100%" src="@Model.Photo" />
        </div>
        <div class="container col-md-8">
            <h4>@Model.Name</h4>
            <hr />
            <p>Imdb Score: @Model.ImdbScore - Category: @Model.Category</p>
            <p>Director: @Model.DirectorId</p>
            <p>@Model.Description</p>
            <div class="container">
                <a href="/Home/Movies/" class="btn btn-outline-info">Back</a>
                <a href="/Movie/Update/@Model.Id" class="btn btn-outline-success">Update</a>
                <a href="/Movie/Delete/@Model.Id" class="btn btn-outline-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

