
@{
    ViewBag.Title = "Contact";
}

<div class="container col-md-5 text-center">
    <h3>Contact</h3>
    <hr />
    <form>
        <div class="form-group">
            <label>Name Surname</label>
            <input type="text" class="form-control" placeholder="Enter name surname">
        </div>
        <div class="form-group">
            <label>Email address</label>
            <input type="text" class="form-control" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label>Subject</label>
            <input type="text" class="form-control" placeholder="Enter subject">
        </div>
        <div class="form-group">
            <label>Message</label>
            <textarea class="form-control" rows="6" placeholder="Enter message"></textarea>
        </div>
        <button type="submit" class="btn btn-outline-info">Send Message</button>
    </form>
</div>

